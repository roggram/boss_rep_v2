<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>メッセージ編集</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/edit_message.css">
</head>
<body>
    <!-- ナビゲーション -->
    <div class="nav-container">
        <div>
            <a href="/show_situation?trigger_id={{ trigger_id }}" class="nav-button">
                <i class="fas fa-arrow-left"></i>
                戻る
            </a>
            <a href="/show_trigger" class="nav-button">
                <i class="fas fa-home"></i>
                トップページに戻る
            </a>
        </div>
        <a href="/show_message?trigger_id={{ trigger_id }}&situation_id={{ situation_id }}" class="nav-button show_btn">
            <i class="fas fa-comments"></i>
            メッセージを見る
        </a>
    </div>

    <!-- メッセージリスト -->
    {% for message in messages %}
        <div class="one_message_container">
            <form method="post" action="/update_message" class="message_show_form">
                <input type="hidden" name="message_id" value="{{message.id}}">
                <textarea
                    class="message_edit_form {% if validation_errors.update_message_text is defined and old_input.message_id is defined and old_input.message_id == message.id %}error{% endif %}"
                    name="update_message_text"
                    rows="3"
                >{% if old_input.message_id is defined and old_input.message_id == message.id and old_input.update_message_text is defined %}{{ old_input.update_message_text }}{% else %}{{ message.message }}{% endif %}</textarea>
                <button type="submit" class="message_edit_button">
                    <i class="fas fa-check"></i>
                    更新
                </button>
            </form>
            <form method="post" action="/delete_message" class="message_delete_btn">
                <input type="hidden" name="message_id" value="{{ message.id }}">
                <button type="submit" class="message_edit_button">
                    <i class="fas fa-trash"></i>
                    削除
                </button>
            </form>
            {% if validation_errors.update_message_text is defined and old_input.message_id is defined and old_input.message_id == message.id %}
                <span class="error-message">{{ validation_errors.update_message_text|first }}</span>
            {% endif %}
        </div>
    {% endfor %}

    <!-- 新規追加フォーム -->
    <form action="/add_message" method="post" class="new_message_container">
        <textarea
            name="add_message_text"
            class="{% if validation_errors.add_message_text is defined %}error{% endif %}"
            required
            placeholder="新しいメッセージを入力..."
            rows="3"
        >{% if old_input.add_message_text is defined %}{{ old_input.add_message_text }}{% endif %}</textarea>
        {% if validation_errors.add_message_text is defined %}
            <span class="error-message">{{ validation_errors.add_message_text|first }}</span>
        {% endif %}
        <input type="hidden" name="trigger_id" value="{{ trigger_id }}">
        <input type="hidden" name="situation_id" value="{{ situation_id }}">
        <button type="submit">
            <i class="fas fa-plus"></i>
            新規テキスト登録
        </button>
    </form>
</body>
</html>
