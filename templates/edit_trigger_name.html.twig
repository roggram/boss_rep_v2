<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>コミュニティの編集</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/edit_trigger_name.css">
</head>
<body>
    <h1>コミュニティ名の編集</h1>

    <div class="navigation">
        <button type="button" onclick="history.back()" class="nav-button">
            <i class="fas fa-arrow-left"></i>
            戻る
        </button>
    </div>

    {% for trigger in triggers %}
        <div class="one_trigger_container">
            <form method="post" action="edit_trigger_name_exec" class="trigger_show_form">
                <input type="hidden" name="trigger_id" value="{{trigger.id}}">
                <input
                    class="trigger_show_button {% if validation_errors.update_trigger_name_text is defined and old_input.trigger_id is defined and old_input.trigger_id == trigger.id %}error{% endif %}"
                    type="text"
                    name="update_trigger_name_text"
                    value="{% if old_input.trigger_id is defined and old_input.trigger_id == trigger.id and old_input.update_trigger_name_text is defined %}{{ old_input.update_trigger_name_text }}{% else %}{{ trigger.trigger_name }}{% endif %}"
                >
                <button type="submit" class="trigger_edit_button">
                    <i class="fas fa-check"></i>
                    更新
                </button>
            </form>
            {% if validation_errors.update_trigger_name_text is defined and old_input.trigger_id is defined and old_input.trigger_id == trigger.id %}
                <span class="error-message">{{ validation_errors.update_trigger_name_text|first }}</span>
            {% endif %}
        </div>
    {% endfor %}
</body>
</html>
