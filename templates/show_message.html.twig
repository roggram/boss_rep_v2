<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>show_message</title>
    <link rel="stylesheet" href="/css/show_message.css">
</head>
<body>
    <div class="chat-container">
        <button type="button" onclick="history.back()" class="back-button">戻る</button>
        <div id="chat-root"></div>
        <div class="input-container">
            <button type="button" onclick="showNextMessage()" class="next-button">次のメッセージへ</button>
            <button type="button" onclick="showAllMessages()" class="show-all-button">全て表示</button>
            {# LINE風にするために、メッセージを入力する欄があったが入力し送信しても保存等の機能はないためフォームと送信ボタンを廃止 #}
            {# <input type="text" placeholder="メッセージを入力..." id="reply-text"> #}
            {# <button type="button" onclick="handleSubmit()">送信</button> #}
        </div>
    </div>

    <script>
        const chatRoot = document.getElementById('chat-root');
        {# LINE風にするために、メッセージを入力する欄があったが入力し送信しても保存等の機能はないためフォームと送信ボタンを廃止 #}
        {# const replyText = document.getElementById('reply-text'); #}
        const nextButton = document.querySelector('.next-button');
        const showAllButton = document.querySelector('.show-all-button');

        {# twigの構文:渡された値を格納:json_encode #}
        const messageList = {{ messages|json_encode|raw }};
        const max = {{ messages|length }};

        let index = 0;
        let isProcessing = false;

        // ボタンを無効化する関数
        const disableButtons = () => {
            nextButton.classList.add('disabled');
            showAllButton.classList.add('disabled');
        };

        // PHPのhtmlspecialchars()と同等の関数（XSS対策）
        const htmlspecialchars = (text) => {
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, m => map[m]);
        };

        // URLをリンクに変換する関数(ユーザーの入力したメッセージ内のURLがあればクリック可能にするため)
        {# 全てのhttps://*を取得したいので/g #}
        const convertUrlsToLinks = (text) => {
            // まずテキスト全体をエスケープ（XSS対策）
            const escapedText = htmlspecialchars(text);
            const urlRegex = /(https?:\/\/[^\s]+)/g;
            // エスケープ済みテキストからURLをリンクに変換
            return escapedText.replace(urlRegex, url => `<a href="${url}" target="_blank" style="color: #4299e1; text-decoration: underline;">${url}</a>`);
        };

        // メッセージ内容を一文字ずつ表示していく動きを実装するための関数
        // （メンバー（相手）が今、テキストで入力してくれている感じを出すために）
        const typeWriter = async (element, text, speed = 30) => {
            // URLはタイプライターだと見づらいので例外処理
            if (/(https?:\/\/[^\s]+)/g.test(text)) {
                element.innerHTML = convertUrlsToLinks(text);
                return;
            }

            let i = 0;
            element.textContent = '';
            while (i < text.length) {
                element.textContent += text[i];
                i++;
                // タイピングアニメーションの正体(0.3秒ずつ待たせる処理が以下1行)
                await new Promise(resolve => setTimeout(resolve, speed));
            }
        };

        // 全てのメッセージを一気に表示する関数
        const showAllMessages = async () => {
            if (isProcessing || showAllButton.classList.contains('disabled')) return;
            isProcessing = true;

            // 現在のindexから最後までのメッセージを表示
            while (index < max) {
                const message = messageList[index].message;

                const left = document.createElement('div');
                left.className = 'message left';
                const chatBox = document.createElement('div');
                chatBox.className = 'chat_box';

                // URLチェックと変換を即時実行
                if (/(https?:\/\/[^\s]+)/g.test(message)) {
                    chatBox.innerHTML = convertUrlsToLinks(message);
                } else {
                    chatBox.textContent = message;
                }

                left.appendChild(chatBox);
                chatRoot.appendChild(left);

                index++;

                // 最後のメッセージまでスクロール
                if (index === max) {
                    chatBox.scrollIntoView({ behavior: 'smooth' });
                }
            }
            // 全て表示したらボタンを無効化
            if (index >= max) {
                disableButtons();
            }
            isProcessing = false;
        };

        {# LINE風にするために、メッセージを入力する欄があったが廃止したので関数もコメントアウト #}
        {# const handleSubmit = async () => {
            const reply = replyText.value;
            if (reply === '' || isProcessing) {
                return;
            }

            isProcessing = true;
            appendReply(reply);
            replyText.value = '';

            if (index < max) {
                await showNextMessage();
            }
            isProcessing = false;
        }; #}

        const showNextMessage = async () => {
            if (index >= max || isProcessing || nextButton.classList.contains('disabled')) {
                return;
            }

            isProcessing = true;
            const message = messageList[index].message;

            const left = document.createElement('div');
            left.className = 'message left';
            const chatBox = document.createElement('div');
            chatBox.className = 'chat_box';
            left.appendChild(chatBox);
            chatRoot.appendChild(left);

            await typeWriter(chatBox, message, 30);

            chatBox.scrollIntoView({ behavior: 'smooth' });
            index++;

            // 全て表示したらボタンを無効化
            if (index >= max) {
                disableButtons();
            }

            isProcessing = false;
        };

        {# const appendReply = (reply) => {
            const right = document.createElement('div');
            right.className = 'message right';
            const chatBox = document.createElement('div');
            chatBox.className = 'chat_box';

            if (/(https?:\/\/[^\s]+)/g.test(reply)) {
                chatBox.innerHTML = convertUrlsToLinks(reply);
            } else {
                chatBox.textContent = reply;
            }

            right.appendChild(chatBox);
            chatRoot.appendChild(right);
            chatBox.scrollIntoView({ behavior: 'smooth' });
        }; #}

        // Enterキーでの送信を有効にする
        {# if (replyText) {
            replyText.addEventListener('keypress', (e) => {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    handleSubmit();
                }
            });
        } #}

        // 最初のメッセージを表示
        window.addEventListener('load', async () => {
            if (messageList.length > 0) {
                isProcessing = true;
                const left = document.createElement('div');
                left.className = 'message left';
                const chatBox = document.createElement('div');
                chatBox.className = 'chat_box';
                left.appendChild(chatBox);
                chatRoot.appendChild(left);
                await typeWriter(chatBox, messageList[0].message, 30);
                index = 1;

                // メッセージが1つしかない場合はボタンを無効化
                if (index >= max) {
                    disableButtons();
                }
                isProcessing = false;
            } else {
                // メッセージが0件の場合もボタンを無効化
                disableButtons();
            }
        });
    </script>
</body>
</html>
